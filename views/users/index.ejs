<% 
layout('../boilerplate');
script('/js/users.js');
-%>
<style>

</style>
<div class="container" id="admin">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12">
			<% for(k in messages) { %>
				<div class="alert alert-success alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<strong>Success!</strong> <%= messages[k] %>
				</div>
			<% } %>
			<div class="panel panel-default">
				<!-- Default panel contents -->
				<div class="panel-heading">
					Users
					<div class="pull-right">
						<a href="/users/create" type="button" class="btn btn-default btn-xs">
						<span class="glyphicon glyphicon-plus"></span>
						</a>
					</div>
				</div>

				<div class="panel-body">
					<form action="/users/" method="post">
					<%-input({
						type: 'text',
						name: 'search',
						employeeholder: 'Search',
						value: search,
						class: 'form-control'
					})%>
					</form>
				</div>

				<!-- Table -->
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th>Role</th>
							<th class="visible-md visible-lg">Email</th>
							<th>&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						<% for(k in users){ %>
						<tr>
							<td><%=users[k].name%></td>
							<td><%=roles[users[k].role]%></td>
							<td class="visible-md visible-lg"><%=users[k].email%></td>
							<td>
								<div class="btn-group pull-right">
									<a href="/users/edit/<%=users[k]._id%>/" type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
									<% if(users[k]._id.toString() != user._id){ %>
										<button data-id="<%=users[k]._id%>" type="button" class="btn btn-default btn-xs udel"><span class="glyphicon glyphicon-remove"></span></button>
									<% } %>
								</div>
							</td>
						</tr>
						<% } %>
					</tbody>
				</table>
				<div class="panel-footer">
					<%-BootstrapPaginator({
						route: '/users/',
						pages: pages,
						page: page,
						max_pages: 3
					})%>
				</div>
			</div>
		</div>

	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="alert_win" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<form id="del_confirm" method="post">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">Confirmation</h4>
				</div>
				<div class="modal-body">
					<p>Are you sure you want to delete this user?</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
					<button type="submit" class="btn btn-danger">Yes</button>
				</div>
			</form>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
